---
import { useTranslations as createTranslator } from '$lib/i18n/utils';
import { cn } from '$lib/utils';
import SectionContainer from 'src/components/layout/sectionContainer.astro';
import { ProjectCardList } from 'src/features/projects/components/ProjectCardList';
import { projects } from 'src/features/projects/data/projects';
import type { Lang } from 'src/lib/i18n/type';

const lang = Astro.currentLocale as Lang;
const t = createTranslator(lang);
---

<SectionContainer sectionID="project">
    <hgroup class={cn(['mb-12', 'md:mb-16', 'text-center'])}>
        <p
            class={cn([
                'text-sm',
                'font-semibold',
                'uppercase',
                'tracking-[0.35em]',
                'text-slate-500',
                'dark:text-slate-400',
            ])}
        >
            Selected Works
        </p>
        <h2
            class={cn(
                ['mt-4', 'text-4xl', 'font-bold', 'text-gradient'],
                ['md:text-6xl'],
            )}
        >
            Projects
        </h2>
        <p
            class={cn([
                'mt-6',
                'text-base',
                'text-slate-600',
                'dark:text-slate-300',
                'leading-relaxed',
            ])}
        >
        {t({
            ja: 'これまでに携わったプロジェクトの一部をご紹介します。詳細は各プロジェクトのリンクからご覧ください。',
            en: 'Here are some of the projects I have been involved in. Please check the links for more details on each project.',
        })}
        </p>
    </hgroup>
    <div
        class={cn(
            ['w-full']
        )}
    >
            <ProjectCardList projects={projects} client:visible initialLang={lang} />
    </div>
</SectionContainer>
