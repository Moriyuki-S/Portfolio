---
import { cn } from '$lib/utils';
import { Avatar } from '@heroui/react';
import SectionContainer from 'src/components/layout/sectionContainer.astro';
import TimelineList from 'src/components/ui/timelineList.astro';
import type { Lang } from 'src/lib/i18n/type';
import { useTranslations as createTranslator } from 'src/lib/i18n/utils';

const t = createTranslator(Astro.currentLocale as Lang);
---

<SectionContainer sectionID="profile">
    <hgroup class={cn(['md:mb-20'])}>
        <h2
            class={cn(
                [
                    'text-5xl',
                    'mb-6',
                    'font-bold',
                    'text-gradient',
                    'bg-center',
                ],
                ['md:text-7xl', 'md:mb-12'],
            )}
        >
            About Me
        </h2>
        <div
            class={cn(
                ['flex', 'flex-col', 'items-center', 'justify-center', 'gap-y-4'],
                ['md:flex-row', 'md:gap-x-8'],
            )}
        >
            <div class={cn(['w-fit'])}>
                <Avatar
                    className={cn([
                        'w-20',
                        'h-20',
                        'box-border',
                        'rounded-full',
                    ])}
                    client:visible
                    src='images/me.jpg'
                />
            </div>
            <p class={cn(['leading-relaxed', 'max-w-3xl'])}>
                {t({
                    ja: `京都大学工学部物理工学科の4回生です。
                    大学の制御研究室では、深層学習を応用した多自由度ロボットの制御手法について研究しています。
                    また、学業と並行して実務面ではバックエンド開発や画像認識AIの実装にも従事してきました。
                    制御理論の基礎と実システムへの実装経験、双方で培った知見を活かし、現在はより自律的な動作を実現する強化学習や模倣学習を活用したロボット開発に挑戦したいと考えています。`,
                    en: `I am a senior in the Department of Engineering Science at Kyoto University. My research focuses on control methods for multi-degree-of-freedom robots using deep learning. Alongside my academic work, I have gained practical experience in backend development and image recognition AI through professional projects.
Leveraging both my foundation in control theory and my hands-on implementation skills, I am now eager to develop autonomous robots using reinforcement learning and imitation learning.`,
                })}
            </p>
        </div>
    </hgroup>
    <section
        aria-labelledby="work-experience"
        class={cn(
            ['mt-10', 'max-w-3xl', 'mx-auto', 'mb-18'],
            ['md:mb-32'],
        )}
    >
        <hgroup class={cn(['mt-10', 'mb-12'])}>
            <p
                class={cn([
                    'text-sm',
                    'font-semibold',
                    'uppercase',
                    'tracking-[0.35em]',
                    'text-blue-500',
                    'dark:text-blue-300',
                ])}
            >
                Career
            </p>
            <h3
                id="work-experience"
                class={cn(
                    [
                        'mt-4',
                        'text-3xl',
                        'font-bold',
                        'bg-gradient-to-r',
                        'from-blue-400',
                        'via-sky-500',
                        'to-blue-700',
                        'bg-clip-text',
                        'text-transparent',
                        'leading-tight',
                    ],
                    [
                        'md:text-5xl',
                        'dark:from-blue-300',
                        'dark:via-sky-400',
                        'dark:to-blue-600',
                    ],
                )}
            >
                Internships
            </h3>
        </hgroup>
        <TimelineList
            timelines={[
                {
                    id: 1,
                    title: { ja: 'mui Lab, Inc.', en: 'mui Lab, Inc.' },
                    description: {
                        ja: 'TypeScriptとAWSを用いたバックエンド開発を行いました。現在はRaspberry Piを使用したIoTプロジェクトにも取り組んでいます。',
                        en: 'I worked on backend development using TypeScript and AWS. Currently, I am also involved in an IoT project using Raspberry Pi.',
                    },
                    date: {
                        start: new Date('2024-04'),
                    },
                    type: 'work',
                    location: {
                        text: { ja: 'mui Lab, Inc', en: 'mui Lab, Inc.' },
                        url: 'https://muilab.com/',
                    },
                },
                {
                    id: 2,
                    title: {
                        ja: 'STAR UP株式会社',
                        en: 'STAR UP Inc.',
                    },
                    description: {
                        ja: '工場内の異常を検知する画像認識AIの開発に携わっています。NVIDIA Jetsonを使用したエッジデバイスでの実装経験もあります。',
                        en: 'I am involved in the development of image recognition AI that detects abnormalities in factories. I also have experience implementing it on edge devices using NVIDIA Jetson.',
                    },                    date: {
                        start: new Date('2024-09-01'),
                    },
                    type: 'work',
                    location: {
                        text: { ja: 'STAR UP株式会社', en: 'STAR UP Inc.' },
                        url: 'https://www.starup01.jp/',
                    },
                },
            ]}
            translate={t}
        />
    </section>
    <section
        aria-labelledby="education"
        class={cn(['mt-10', 'max-w-3xl', 'mx-auto', 'mb-18'])}
    >
        <hgroup class={cn(['mt-10', 'mb-12'])}>
            <p
                class={cn([
                    'text-sm',
                    'font-semibold',
                    'uppercase',
                    'tracking-[0.35em]',
                    'text-amber-500',
                    'dark:text-amber-300',
                ])}
            >
                Background
            </p>
            <h3
                id="education"
                class={cn(
                    [
                        'mt-4',
                        'text-3xl',
                        'font-bold',
                        'bg-gradient-to-r',
                        'from-amber-400',
                        'via-orange-400',
                        'to-amber-600',
                        'bg-clip-text',
                        'text-transparent',
                        'leading-tight',
                    ],
                    [
                        'md:text-5xl',
                        'dark:from-amber-300',
                        'dark:via-orange-300',
                        'dark:to-amber-500',
                    ],
                )}
            >
                Education
            </h3>
        </hgroup>
        <TimelineList
            timelines={[
                {
                    id: 1,
                    title: {
                        ja: '京都大学工学部物理工学科',
                        en: 'Kyoto University, Faculty of Engineering Science',
                    },
                    description: {
                        ja: '4大力学(機械力学、熱力学、材料力学、流体力学)や制御工学を中心に学びました。現在は制御研究室に所属し、深層学習とモデル予測制御(MPC)を組み合わせた多自由度ロボットの制御手法について研究しています。',
                        en: 'I studied the four major mechanics (mechanical, thermal, material, and fluid mechanics) and control engineering. Currently, I belong to the control laboratory, where I research control methods for multi-degree-of-freedom robots by combining deep learning and model predictive control (MPC).',
                    },
                    date: {
                        start: new Date('2022-04-01'),
                        end: new Date('2026-03-31'),
                    },
                    type: 'education',
                    location: {
                        text: { ja: '京都大学', en: 'Kyoto University' },
                        url: 'https://www.kyoto-u.ac.jp/',
                    },
                },
                {
                    id: 2,
                    title: {
                        ja: '京都大学大学院工学研究科',
                        en: 'Kyoto University, Graduate School of Engineering',
                    },
                    description: {
                        ja: '制御工学やロボティクス、機械学習をさらに深く学び、研究を進めるために大学院への進学を予定しています。',
                        en: 'I plan to pursue graduate studies to further deepen my knowledge in control engineering, robotics, and machine learning, and to advance my research in these fields.',
                    },
                    date: {
                        start: new Date('2026-04-01'),
                    },
                    type: 'education',
                    location: {
                        text: { ja: '京都大学', en: 'Kyoto University' },
                        url: 'https://www.kyoto-u.ac.jp/'
                    }
                }
            ]}
            translate={t}
        />
    </section>
</SectionContainer>
