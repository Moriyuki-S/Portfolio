---
import { cn } from '$lib/utils';
import { LuArrowDown } from 'react-icons/lu';
import { CubeAnimation } from 'src/components/ui/CubeAnimation';
import type { Lang } from 'src/lib/i18n/type';
import { useTranslations as createTranslator } from 'src/lib/i18n/utils';

const t = createTranslator(Astro.currentLocale as Lang);
---


<div
    class={cn(
        [
            'relative',
            'w-full',
            'h-screen',
            'overflow-hidden',
            'px-2',
            'py-4',
        ],
        ['md:px-10'],
    )}
>
    <CubeAnimation
        client:load
        className={cn([
            'absolute',
            'inset-0',
            'h-full',
            'w-full',
            'pointer-events-auto',
            'z-10'
        ])}
    />
    <div
        class={cn([
            'absolute',
            'inset-0',
            'pointer-events-none',
            'bg-gradient-to-b',
            'from-white/95',
            'via-white/85',
            'to-white',
            'dark:from-slate-950/85',
            'dark:via-slate-950/65',
            'dark:to-slate-950/90',
            '-z-10',
        ])}
        aria-hidden="true"
    />
    <div
        class={cn([
            'relative',
            'z-10',
            'flex',
            'h-full',
            'w-full',
            'flex-col',
            'items-center',
            'justify-center',
            'text-center',
            'px-4',
            'gap-6',
        ])}
    >
        <h1
            class={cn(
                [
                    'text-6xl',
                    'font-bold',
                    'leading-tight',
                    'tracking-tight',
                    'text-slate-900',
                    'drop-shadow-[0_8px_24px_rgba(15,23,42,0.18)]',
                ],
                ['md:text-16xl'],
                ['dark:text-white']
            )}
        >
            Moriyuki Suzuki
        </h1>
        <p
            class={cn([
                'max-w-2xl',
                'text-base',
                'md:text-lg',
            ])}
        >
        {t({ ja: '京都大学でロボット制御の研究をしています。AIやWeb技術に興味があり、研究やインターンを通じてスキルを磨いています。', en: 'Researcher at Kyoto University specializing in Robot Control, with a passion for integrating AI and modern web technologies.' })}
        </p>
    </div>
    <div
        class={cn(['absolute', 'bottom-24', 'left-1/2', '-translate-x-1/2', 'z-10'], ['md:bottom-28'])}
    >
        <a
            href="#profile"
            class={cn([
                'flex',
                'items-center',
                'cursor-pointer',
                'font-extrabold',
                'text-slate-900',
                'dark:text-white',
            ])}
        >
            <LuArrowDown
                size={24}
                className={cn([
                    'me-2',
                    'font-bold',
                    'mt-1',
                    'motion-safe:animate-bounce',
                    'dark:text-white',
                ])}
            />
            <p>Scroll</p>
        </a>
    </div>
</div>
